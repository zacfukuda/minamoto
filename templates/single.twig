{% extends "layout/base.twig" %}

{% block content %}
	<article id="post-{{post.ID}}" class="{{post.post_type}}">
		{% if post.thubmanil %}
			<picture>
				<img src="{{post.thumbnail.src('medium')}}" srcset="{{post.thumbnail.srcset}}" sizes="{{post.thumbnail.sizes}}" alt="{{post.title}}">
			</picture>
		{% endif %}
		<h1>{{ post.title }}</h1>
		<p>Author: <a href="{{post.author.path}}"> {{ post.author.name }} </a></p>
		<p>Date: {{ post.date }}</p>
		<ul>
			{% for tag in post.tags %}
				<li class="{{tag.taxonomy}}"><a href="{{tag.link}}">{{tag.name}}</a></li>
			{% endfor %}
		</ul>
		<div>{{ post.content }}</div>
	</article>
{% endblock %}
