<article>
	{% if post.get_thumbnail %}
		<picture>
			<img src="{{post.thumbnail.src('medium')}}" srcset="{{post.thumbnail.srcset}}" sizes="{{post.thumbnail.sizes}}" alt="{{post.title}}">
		</picture>
	{% endif %}
	<h3><a href="{{post.link}}" title="{{post.title}}">{{ post.title }}</a></h3>
	<p>{{post.preview}}</p>
</article>
