{% extends "layout/base.twig" %}
{% block content %}
	<h1>{{ page.title }}</h1>
	{{ html ? html : post.content }}
	<h2>Latest Posts</h2>
	{% if posts | length %}
		<div class="">
			{% for post in posts %}
				{% include "component/post-list-item.twig" %}
			{% endfor %}
		</div>
	{% else %}
		<p>No posts found.</p>
	{% endif %}
{% endblock %}
