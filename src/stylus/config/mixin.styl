/**
 * config/mixin
 */

// Clearfix
clearfix()
	zoom 1
	&:before
	&:after
		content ""
		display table
	&:after
		clear both

// :before & :after
hasBeforeAfter()
	position relative
	&:before, &:after
		content ""
		display block
		position absolute
hasBefore()
	position relative
	&:before
		content ""
		display block
		position absolute
hasAfter()
	position relative
	&:after
		content ""
		display block
		position absolute