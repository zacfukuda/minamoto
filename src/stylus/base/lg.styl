/**
 * base/desktop
 */

// Document & body

// Section

// Container
.container
	max-width $container-width-lg
	&.is-narrow
		max-width $container-width-md

// Display
.desktop
	display block
.ib-lg
	display inline-block
.inline-lg
	display inline
.table-lg
	display table
.table-cell-lg
	display table-cell

// Justify content
.jc-start-lg
	justify-content start
.jc-end-lg
	justify-content end
.jc-center-lg
	justify-content center
.jc-stretch-lg
	justify-content stretch
.jc-between-lg
	justify-content space-between
.jc-around-lg
	justify-content space-around
.jc-evenly-lg
	justify-content space-evenly

// Align items
.ai-start-lg
	align-items start
.ai-end-lg
	align-items end
.ai-center-lg
	align-items center
.ai-stretch-lg
	align-items stretch
.ai-baseline-lg
	align-items baseline

// Align content
.ac-stretch-lg
	align-content stretch
.ac-center-lg
	align-content center
.ac-between-lg
	align-content space-between
.ac-around-lg
	align-content space-around

/**
 * Flex(box)
 */
.flex-lg
	display flex

// Wrap
.wrap-lg
	flex-wrap wrap
.nowrap-lg
	flex-wrap nowrap

// Direction
.flex-dir-row-lg
	flex-direction row
.flex-dir-row-reverse-lg
	flex-direction row-reverse
.flex-dir-col-lg
	flex-direction column
.flex-dir-col-reverse-lg
	flex-direction column-reverse

// Horizontal Alignment
.jc-flex-start-lg
	justify-content flex-start
.jc-flex-end-lg
	justify-content flex-end

// Vertical Alignment
.ai-flex-start-lg
	align-items flex-start
.ai-flex-end-lg
	align-items flex-end

// Align content
.ac-flex-start-lg
	align-content flex-start
.ac-flex-end-lg
	align-content flex-end