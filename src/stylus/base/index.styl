/**
 * base/index
 */

/*------------------------*\
  Basic
\*------------------------*/
html, body
	width 100%
	position relative
	
html
	overflow-x hidden
	&.overflow-hidden
		overflow hidden
	&.overflow-y-hidden
		overflow-y hidden

body
	overflow hidden

// Section
$sect-space = 48px
section
	&.has-padding
		padding $sect-space 0
	&.has-padding-top
		padding $sect-space 0 0
	&.has-padding-bottom
		padding 0 0 $sect-space
	&.has-margin
		margin $sect-space 0
	&.with-margin-top
		margin $sect-space 0 0
	&.with-margin-bottom
		margin 0 0 $sect-space
	&.has-row
		&.has-padding
			padding ($sect-space - $gutter) 0 $sect-space
		&.has-padding-top
			padding ($sect-space - $gutter) 0 0
		&.has-margin
			margin ($sect-space - $gutter) 0 $sect-space
		&.has-margin-top
			margin ($sect-space - $gutter) 0 0

// Container
.container
	width 100%
	max-width $container-width
	margin 0 auto
	padding 0 16px

// Media
figure, picture, video
	display block

img, svg
	height auto
	max-width 100%
	vertical-align bottom
	&.w100
		width 100%

// Anchor
a.anchor
	display block
	position relative
	top -($header-height+16px)
	visibility hidden

