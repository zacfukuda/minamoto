*
	box-sizing border-box
	-webkit-overflow-scrolling touch
	-webkit-tap-highlight-color transparent

html, body
	width 100%
	position relative

// html

// body

section, .section
	&.padding
		padding $section-margin 0
	&.padding-t
		padding $section-margin 0 0
	&.padding-b
		padding 0 0 $section-margin
	&.margin
		margin $section-margin 0
	&.margin-t
		margin $section-margin 0 0
	&.margin-b
		margin 0 0 $section-margin

.container
	width 100%
	max-width $container-width
	margin-left auto
	margin-right auto
	padding-left ($gutter/2)
	padding-right ($gutter/2)

figure, picture, video
	display block

img, svg
	height auto
	max-width 100%
	vertical-align bottom
	&.w100
		width 100%

ul
	&.disc, &.circle, &.square
		padding 0 0 0 1.5em
	&.disc
		list-style disc
	&.circle
		list-style circle
	&.square
		list-style square

ol
	&.lower-roman
		list-style lower-roman
	&.upper-roman
		list-style upper-roman
	&.lower-alpha
		list-style lower-alpha
	&.upper-alpha
		list-style upper-alpha

a.anchor
	display block
	position relative
	visibility hidden

button
	-webkit-tap-highlight-color transparent
	cursor pointer
	&:focus
		outline none

