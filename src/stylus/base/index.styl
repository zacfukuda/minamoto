*
	box-sizing border-box
	-webkit-overflow-scrolling touch
	-webkit-tap-highlight-color transparent

html, body
	position relative
	width 100%
	overflow-x hidden

section, .section
	&.mar
		margin $sect-mar 0
	&.mar-t
		margin-top $sect-mar
	&.mar-b
		margin-bottom $sect-mar
	&.pad
		padding $sect-pad 0
	&.pad-t
		padding-top $sect-pad
	&.pad-b
		padding-bottom $sect-pad

.container
	width 100%
	max-width $container-width
	margin-left auto
	margin-right auto
	padding-left $gutter
	padding-right $gutter

figure, picture, video
	display block

img, svg
	height auto
	max-width 100%
	vertical-align bottom
	&.w100
		width 100%

ul
	&.disc, &.circle, &.square
		padding 0 0 0 1.5em
	&.disc
		list-style disc
	&.circle
		list-style circle
	&.square
		list-style square
	&.nostyle
		list-style none
		margin-left 0
		padding-left 0
ol
	&.lower-roman
		list-style lower-roman
	&.upper-roman
		list-style upper-roman
	&.lower-alpha
		list-style lower-alpha
	&.upper-alpha
		list-style upper-alpha

a.anchor
	display block
	position relative
	visibility hidden

button
	-webkit-tap-highlight-color transparent
	cursor pointer
	&:focus
		outline none
	&.plain
		appearance none
		border none
		background transparent
		outline none
		padding 0

