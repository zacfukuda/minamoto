/**
 * base/md
 */

// Document & body

// Section
$sect-space = 80px
section
	&.padding
		padding $sect-space 0
	&.padding-t
		padding $sect-space 0 0
	&.padding-b
		padding 0 0 $sect-space
	&.margin
		margin $sect-space 0
	&.margin-t
		margin $sect-space 0 0
	&.margin-b
		margin 0 0 $sect-space
	&.has-row
		&.padding
			padding ($sect-space - $gutter) 0 $sect-space
		&.padding-t
			padding ($sect-space - $gutter) 0 0
		&.margin
			margin ($sect-space - $gutter) 0 $sect-space
		&.margin-t
			margin ($sect-space - $gutter) 0 0

// Container
.container
	max-width $container-width-md
	padding 0 ($gutter+8)

// List

// Anchor
a.anchor
	top -($header-height-md + 16px)

// Block Alighment
.alignleft
	float left
.alignright
	float right

// Display
.mobile
	display none
	
.tablet
	display block
.ib-md
	display inline-block
.inline-md
	display inline
.table-md
	display table
.table-cell-md
	display table-cell

// Justify content
.jc-start-md
	justify-content start
.jc-end-md
	justify-content end
.jc-center-md
	justify-content center
.jc-stretch-md
	justify-content stretch
.jc-between-md
	justify-content space-between
.jc-around-md
	justify-content space-around
.jc-evenly-md
	justify-content space-evenly

// Align items
.ai-start-md
	align-items start
.ai-end-md
	align-items end
.ai-center-md
	align-items center
.ai-stretch-md
	align-items stretch
.ai-baseline-md
	align-items baseline

// Align content
.ac-stretch-md
	align-content stretch
.ac-center-md
	align-content center
.ac-between-md
	align-content space-between
.ac-around-md
	align-content space-around

/**
 * Flex(box)
 */
.flex-md
	display flex

// Wrap
.wrap-md
	flex-wrap wrap
.nowrap-md
	flex-wrap nowrap

// Direction
.flex-dir-row-md
	flex-direction row
.flex-dir-row-reverse-md
	flex-direction row-reverse
.flex-dir-col-md
	flex-direction column
.flex-dir-col-reverse-md
	flex-direction column-reverse

// Horizontal Alignment
.jc-flex-start-md
	justify-content flex-start
.jc-flex-end-md
	justify-content flex-end

// Vertical Alignment
.ai-flex-start-md
	align-items flex-start
.ai-flex-end-md
	align-items flex-end

// Align content
.ac-flex-start-md
	align-content flex-start
.ac-flex-end-md
	align-content flex-end