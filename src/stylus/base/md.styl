/**
 * base/md
 */

// Section
$sect-space = 80px
section
	&.has-padding
		padding $sect-space 0
	&.has-padding-top
		padding $sect-space 0 0
	&.has-padding-bottom
		padding 0 0 $sect-space
	&.has-margin
		margin $sect-space 0
	&.has-margin-top
		margin $sect-space 0 0
	&.has-margin-bottom
		margin 0 0 $sect-space
	&.has-row
		&.has-padding
			padding ($sect-space - $gutter) 0 $sect-space
		&.has-padding-top
			padding ($sect-space - $gutter) 0 0
		&.has-margin
			margin ($sect-space - $gutter) 0 $sect-space
		&.has-margin-top
			margin ($sect-space - $gutter) 0 0

// Container
.container
	max-width $container-width-md
	padding 0 ($gutter+8)

// Anchor
a.anchor
	top -($header-height-md + 16px)

// Block Alighment
.alignleft
	float left
.alignright
	float right

// Display
.mobile
	display none
	
.tablet
	display block
.ib-md
	display inline-block
.inline-md
	display inline
.table-md
	display table
.table-cell-md
	display table-cell

// Justify content
.jc-start-md
	justify-content start
.jc-end-md
	justify-content end
.jc-center-md
	justify-content center
.jc-stretch-md
	justify-content stretch
.jc-between-md
	justify-content space-between
.jc-around-md
	justify-content space-around
.jc-evenly-md
	justify-content space-evenly

// Align items
.ai-start-md
	align-items start
.ai-end-md
	align-items end
.ai-center-md
	align-items center
.ai-stretch-md
	align-items stretch
.ai-baseline-md
	align-items baseline
