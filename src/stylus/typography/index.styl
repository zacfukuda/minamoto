/**
 * typography/index
 */

// Document & body
html, body
	color $black
	font-family $gothic
	font-size 13px
	line-height 22px

body
	-webkit-text-size-adjust none

// Antialiase
body, h1, h2, h3, h4, h5, h6, p, li, th, td, dt, dd, a, em, i, small, mark, span, address, figcaption, pre, code
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	font-smoothing antialiased	
	text-rendering optimizeLegibility

// Font Size & Line Height
h1, .h1
	font-size 28px
	line-height 38px
h2, .h2
	font-size 24px
	line-height 34px
h3, .h3
	font-size 21px
	line-height 28px
h4, .h4
	font-size 18px
	line-height 24px
h5, .h5
	font-size 16px
	line-height 24px
h6, .h6
	font-size 14px
	line-height 20px
.p
	font-size 13px
	line-height 22px
small, .small
	font-size 12px
	line-height 16px
.smaller
	font-size 11px
	line-height 15px

// Color
.key
	color $black
.gray
	color $gray
.red
	color $red
.blue
	color $green
.blue
	color $blue
.white
	color #fff

// Weight
.ultrathin
	font-weight 100
.thin
	font-weight 200
.light
	font-weight 300
.regular
	font-weight 400
.medium
	font-weight 500
.demi
	font-weight 600
b, strong, .bold
	font-weight 700
.heavy
	font-weight 800
.black
	font-weight 900

// Style
em, .em
	font-style italic

// Anchor Link
a
	color $blue
	text-decoration none
	&:hover
		text-decoration none
	&.underline
		text-decoration underline
		&:hover
			text-decoration none
	&.hover-underline:hover
		text-decoration underline

// Text Alignment
.left
	text-align left
.center
	text-align center
.right
	text-align right
.justify
	text-align justify
.justify-last-line
	-moz-text-align-last justify
	text-align-last justify

// Font Family
// English
.sans-serif
	font-family $sans-serif
.serif
	font-family $serif
.opensans
	font-family $opensans
.monospace
	font-family $monospace
// Japanese
.gothic
	font-family $gothic
.mincho
	font-family $mincho
.maru-gothic
	font-family $maru-gothic

// Line Height
.lh-1
	line-height 1
.lh-1p25
	line-height 1.25
.lh-1p5
	line-height 1.5
.lh-1p75
	line-height 1.75
.lh-2
	line-height 2
.lh-2p5
	line-height 2.5
.lh-3
	line-height 3

// Kerning
.kerning-normal
	font-kerning normal
.kerning-none
	font-kerning none
.kerning-auto
	font-kerning auto

// Type cases
.uppercase
	text-transform uppercase
.lowercase
	text-transform lowercase

// white-space
.white-space-nowrap
	white-space nowrap

// word-break
.word-break-all
	word-break break-all
.word-keep-all
	word-break keep-all

// word-wrap
.break-word
	word-wrap break-word

// Hyphenation
.hyphenate
	@extend .word-break-all
	hyphens auto

// Ligatres (https://developer.mozilla.org/en-US/docs/Web/CSS/font-variant-ligatures)
// Coming someday...

// Capitals (https://developer.mozilla.org/en-US/docs/Web/CSS/font-variant-caps)
.caps-small
	font-variant-caps small-caps
.caps-all-small
	font-variant-caps all-small-caps
.caps-titling
	font-variant-caps titling-caps

// Numerals (https://developer.mozilla.org/en-US/docs/Web/CSS/font-variant-numeric)
.nums-ordinal
	font-variant-numeric ordinal
.nums-lining
	font-variant-numeric lining-nums
.nums-oldstyle
	font-variant-numeric oldstyle-nums
.nums-proportional
	font-variant-numeric proportional-nums
.nums-tabular
	font-variant-numeric tabular-nums

// East asian (https://developer.mozilla.org/en-US/docs/Web/CSS/font-variant-east-asian)
.ea-proportional
	font-variant-east-asian proportional-width
.ea-full
	font-variant-east-asian full-width

// Japanse kerning
.ja-palt
	font-feature-settings "palt" 1
.ja-pkna
	font-feature-settings "pkna" 1

