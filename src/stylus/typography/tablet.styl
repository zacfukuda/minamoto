/**
 * typography/tablet
 */

// Font Size & Line Height
html, body
	font-size $p
	line-height $p-lh
h1, .h1
	font-size $h1
	line-height $h1-lh
h2, .h2
	font-size $h2
	line-height $h2-lh
h3, .h3
	font-size $h3
	line-height $h3-lh
h4, .h4
	font-size $h4
	line-height $h4-lh
h5, .h5
	font-size $h5
	line-height $h5-lh
h6, .h6
	font-size $h6
	line-height $h6-lh
p, .p
	font-size $p
	line-height $p-lh
small, .small
	font-size $small
	line-height $small-lh
.smaller
	font-size $smaller
	line-height $small-lh