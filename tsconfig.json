{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": false,
        "esModuleInterop": false,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": false,
        "jsx": "react",
        "lib": ["DOM", "ES2018"],
        "module": "es6",
        "moduleResolution": "Node",
        "noEmit": false,
        "outDir": "./dist/",
        "resolveJsonModule": false,
        "skipLibCheck": true,
        "strict": true,
        "target": "es6",
        "useDefineForClassFields": true
    },
    "include": ["src/ts/**/*"]
}
